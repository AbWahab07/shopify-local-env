{% form "activate_customer_password" %}

  <h1>Activate Account</h1>
  <p>Create your password to activate your account.</p>

  {% if form.errors %}
    <div class="text-links">
      {{ form.errors | default_errors }}
    </div>
  {% endif %}

  <label for="customer_password">Password</label>
  <input type="password" value="" name="customer[password]" id="customer_password" required />

  <label for="customer_password_confirmation">Password Confirmation</label>
  <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" required />


  <button type="submit">Activate account</button>
  <button type="submit" name="decline" id="customer_decline">Decline invitation</button>
{% endform %}
