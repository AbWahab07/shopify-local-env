<div class="margin-bottom--up-1" data-id="{{ item.id }}">
  <div class="grid--bar">
    <div class="grid-item large--two-thirds">
      <div class="grid--bar medium-down--margin-bottom--0">

        <div class="grid-item one-fifth">
          <a class="image-container" href="{{ item.product.url }}">
            <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}" />
          </a>
        </div>

        <div class="grid-item four-fifths">
          <h2 class="margin--none">
            <a href="{{ item.product.url }}">
              {{ item.product.title }}
            </a>
            {% if item.product.variants.size != 0 %}
              {% unless item.variant.title contains 'Default' %}
                <br>
                 <small>{{ item.variant.title }}</small>
              {% endunless %}
            {% endif %}
          </h2>

          {% if item.properties.size > 0 %}
            <ul>
              <li>
                {% for p in item.properties %}
                  {% unless p.last == blank %}
                    {{ p.first }}:

                    {% if p.last contains '/uploads/' %}
                      <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                    {% else %}
                      {{ p.last }}
                    {% endif %}

                    <br>
                  {% endunless %}
                {% endfor %}
              </li>
            </ul>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="grid-item large--one-third">
      <div class="grid--bar">
        <div class="grid-item one-third medium-down--one-third text-right">
          <input class="margin--none" type="number" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" min="0" />
        </div>
        <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
          <span>{{ item.price | money }}</span>
        </div>
        <div class="grid-item one-third medium-down--one-third text-right">
          <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0"><i class="fa fa-remove"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
